# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/myapp

# Main API servers (for load balancing)
API_SERVER_1=http://localhost:5001
API_SERVER_2=http://localhost:5002
API_SERVER_3=http://localhost:5003

# WebSocket servers (for real-time features)
WS_SERVER_1=ws://localhost:6001
WS_SERVER_2=ws://localhost:6002

# External API services
WEATHER_API_URL=https://api.weather.com
MAPS_API_URL=https://api.maps.com
PAYMENT_API_URL=https://api.payment.com

# Service configuration
HEALTH_CHECK_INTERVAL=30000
RECONNECT_INTERVAL=5000
MAX_RECONNECT_RETRIES=5

# Connection pool configuration
POOL_MIN_CONNECTIONS=2
POOL_MAX_CONNECTIONS=20
POOL_ACQUIRE_TIMEOUT=5000
POOL_IDLE_TIMEOUT=300000

# Feature flags
ENABLE_AUTO_CONNECT=true
ENABLE_WEBSOCKET=true
ENABLE_HEALTH_CHECKS=true
ENABLE_LOAD_BALANCING=true

# Load balancing strategy: round-robin, least-connections, random
LOAD_BALANCING_STRATEGY=least-connections